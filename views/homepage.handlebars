{{#each posts as |post| }}
<div class="row mb-4 project">
    <div class="col-md-5">
        <h2>
            <!-- Call helper function with triple brackets to render the emoji span as HTML -->
            {{!-- {{{get_emoji}}} --}}
            <a href="/post/{{post.id}}">{{post.title}}</a>
        </h2>
        <p>Created by {{post.user.name}} on {{post.date_created}}</p>
    </div>
    <div class="col-md-7">
        <p>
            {{post.body}}
        </p>
    </div>
</div>
{{/each}}




